<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body { background: linear-gradient(135deg, #e6e6fa, #dda0dd); color: #333; font-family: Arial, sans-serif; }
    .navbar { background-color: #6a0dad !important; }
    .navbar a { color: white !important; }
    .btn-primary { background-color: #6a0dad; border-color: #6a0dad; }
    .btn-primary:hover { background-color: #5a0b8a; }
    h1 { color: #6a0dad; }
    .table { background-color: rgba(255, 255, 255, 0.8); border-color: #6a0dad; }
    .table th, .table td { border-color: #6a0dad; color: #333; }
    .dark-mode { background: linear-gradient(135deg, #2c2c2c, #4b0082); color: #ddd; }
    .dark-mode .navbar { background-color: #4b0082 !important; }
    .dark-mode .btn-primary { background-color: #8a2be2; }
    .dark-mode .table { background-color: rgba(75, 0, 130, 0.8); }
    .dark-mode .table th, .dark-mode .table td { border-color: #8a2be2; color: #ddd; }
  </style>
</head>
<body class="light-mode">
  <%- include('navbar') %>
  <div class="container mt-5">
    <h1><i class="fas fa-list"></i> Logs</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><i class="fas fa-clock"></i> Time</th>
          <th><i class="fas fa-link"></i> Link</th>
          <th><i class="fas fa-check-circle"></i> Success Count</th>
        </tr>
      </thead>
      <tbody>
        <% logs.forEach(log => { %>
          <tr>
            <td><%= log.time %></td>
            <td><%= log.link %></td>
            <td><%= log.success %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script>
    // Dark mode toggle
    const toggle = document.getElementById('darkModeToggle');
    toggle.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      localStorage.setItem('darkMode', document.body.classList.contains('dark-mode'));
    });
    if (localStorage.getItem('darkMode') === 'true') document.body.classList.add('dark-mode');
  </script>
</body>
</html>